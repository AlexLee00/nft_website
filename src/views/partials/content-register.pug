              .col-md-6
                .field-set
                  label Name:
                  input#name.form-control(type='text', name='name')
              .col-md-6
                .field-set
                  label Email Address:
                  input#email.form-control(type='text', name='email')
              .col-md-6
                .field-set
                  label Choose a Username:
                  input#username.form-control(type='text', name='username')
              .col-md-6
                .field-set
                  label Phone:
                  input#phone.form-control(type='text', name='phone')
              .col-md-6
                .field-set
                  label Password:
                  input#password.form-control(type='text', name='password')
              .col-md-6
                .field-set
                  label Re-enter Password:
                  input#re-password.form-control(type='text', name='re-password')
              .col-md-12
                #submit.pull-left
                  input#send_message.btn.btn-main.color-2(type='submit', value='Register Now')
                #mail_success.success Your message has been sent successfully.
                #mail_fail.error Sorry, error occured this time sending your message.
                .clearfix
// content close
a#back-to-top(href='#')
